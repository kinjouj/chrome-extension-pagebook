{
  "name": "pagebook",
  "version": "0.1",
  "manifest_version": 2,
  "default_locale": "ja",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["assets/js/db.js", "pagebook.js", "notify.js", "background.js"],
    "persistent": false
  },
  "permissions": ["contextMenus", "notifications", "tabs"]
}
